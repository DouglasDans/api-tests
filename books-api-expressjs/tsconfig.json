{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es2016",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                      
    "skipLibCheck": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  }
}
